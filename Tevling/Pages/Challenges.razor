@page "/challenges"
@using Tevling.Strava
@inject IStringLocalizer<Challenges> Loc

<PageTitle>Tevling - @Loc["Challenges"]</PageTitle>

<h1 class="title mb-5">@Loc["Challenges"]</h1>

<div class="d-flex flex-row mb-3 column-gap-5 flex-wrap-reverse">
    <div class="challenges">
        <div class="d-flex column-gap-5 mb-5 align-items-end flex-wrap">
            <div class="challenge-search">
                <label>@Loc["Search"] <br><InputText @bind-Value="@FilterText" @oninput="SetFilterTextDebounced" /></label>
            </div>
            <div>
                <a class="btn btn-primary mt-4" href="challenges/create"><i class="bi bi-plus-lg me-2"></i> @Loc["CreateChallenge"]</a>
            </div>
        </div>

        <div class="d-flex flex-wrap column-gap-4 rg-3 mb-3 challenge-list">
            @foreach (Challenge? challenge in ChallengeList)
            {
                <ChallengeCard AthleteId="@AthleteId" Challenge="@challenge" />
            }
        </div>

        <InfiniteScrollingMarker LoadMore="LoadMore" HasMore="HasMore">
            <LoadingTemplate>@Loc["Loading"]...</LoadingTemplate>
        </InfiniteScrollingMarker>
    </div>

    <div class="d-flex flex-column rg-3 challenge-filters mb-4">
        <h2>@Loc["Filters"]</h2>
        <div class="d-flex flex-column row-gap-1">
            <label><input @bind="ShowAllChallenges" class="form-check-input me-2" type="checkbox"/>@Loc["ShowAll"]</label>
            <label><input @bind="ShowOutdatedChallenges" class="form-check-input me-2" type="checkbox"/>@Loc["ShowOutdated"]</label>
        </div>
        <h4>@Loc["Measurement"]</h4>
        <div class="d-flex flex-column row-gap-1">
            <label><input @bind="ShowTimeChallenges" class="form-check-input me-2" type="checkbox"/>@Loc["Time"]</label>
            <label><input @bind="ShowElevationChallenges" class="form-check-input me-2" type="checkbox"/>@Loc["Elevation"]</label>
            <label><input @bind="ShowDistanceChallenges" class="form-check-input me-2" type="checkbox"/>@Loc["Distance"]</label>
        </div>
        <h4>@Loc["ActivityTypes"]</h4>
        <div class="d-flex flex-column row-gap-1 activity-types-selection">
            <div class="mb-3">
                <DropdownSearch Items="@ActivityTypes" T="ActivityType"
                                DisplayFunc="@ActivityTypeExt.ToString"
                                @bind-SelectedItems="@SelectedActivityTypes"
                                @ref="_dropdownSearchRefActivityTypes">
                </DropdownSearch>
            </div>
            <div class="d-flex flex-wrap column-gap-2 row-gap-1">
                @foreach (ActivityType item in SelectedActivityTypes)
                {
                    <a @onclick="() => DeselectActivityType(item)" type="button" class="btn btn-primary selected-activity-type">
                        @ActivityTypeExt.ToString(item)<i class="bi bi-x ms-1"></i>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
