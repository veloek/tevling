@page "/PrivacyPolicy"
@attribute [AllowAnonymous]
@layout LoginLayout
@inject IStringLocalizer<PrivacyPolicy> Loc


<PageTitle>Tevling - Privacy Policy</PageTitle>
<h1 class="p-5">Tevling - @Loc["PrivacyPolicy"]</h1>
<div class="pe-5 ps-5">
    <h3>Strava</h3>
    <p>@(new MarkupString(Loc["PrivacyPolicyText"]))</p>
    <p style="font-size: 0.85rem">
        @(new MarkupString(Loc["PublicActivities"]))
    </p>
</div>

