<div class="icon-badge-container">
    <i class="bi bi-bell-fill me-2 icon-badge-icon me-2"></i>Notifications
    @if (_notifications.Count is > 0 and < 10)
    {
        <div class="icon-badge">@_notifications.Count</div>
    }
    @if (_notifications.Count >=  10)
    {
        <div class="icon-badge">+</div>
    }
</div>
