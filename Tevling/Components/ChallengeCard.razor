@inject IStringLocalizer<ChallengeCard> Loc
@inject ActivityTypeTranslator ActivityTypeTranslator

@if (Challenge != null)
{
    <div class="challenge-card d-flex flex-column" @onclick="ToggleScoreBoard">
        <div class="d-flex flex-column justify-content-between">
            <div>
                <div class="d-flex justify-content-between">
                    <h5>@Challenge.Title</h5>
                    @if (Challenge.CreatedById == AthleteId)
                    {
                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false" @onclick:stopPropagation="true">
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="challenges/@Challenge.Id/edit">@Loc["Edit"]</a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   data-bs-toggle="modal"
                                   data-bs-target="#deleteChallenge-@(Challenge.Id)"
                                   @onclick:stopPropagation="true">
                                    @Loc["Delete"]
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>

        @if (ShowScoreBoard && ScoreBoard != null)
        {
            <ul class="list-group list-group-flush list-group-numbered overflow-auto scoreboard-list" style="max-height: 14rem">
                @foreach (AthleteScore score in ScoreBoard.Scores)
                {
                    <li class="list-group-item">
                        <div class="scoreboard-item">
                            <div class="d-flex justify-content-between align-items-baseline">
                                <span class="athlete">@score.Name</span>
                                <span class="score">@score.Score</span>
                            </div>
                            @if (HasGoal)
                            {
                                <div class="goal-row">
                                    <div class="progress goal-progress">
                                        <div class="progress-bar @(HasReachedGoal(score.ScoreValue) ? "goal-reached" : "")" style="width: @ProgressPercent(score.ScoreValue)"></div>
                                    </div>
                                    <span class="goal-left">
                                        @RemainingDisplay(score.ScoreValue) @Loc["GoalLeft"]
                                    </span>
                                </div>
                            }
                        </div>
                    </li>
                }
                @if (ScoreBoard.Scores.Count == 0)
                {
                    <li class="list-group-item">@Loc["ScorePlaceholder"]</li>
                }
            </ul>
            <button class="btn btn-primary mt-auto"
                    data-bs-toggle="modal"
                    data-bs-target="#stats-@(Challenge.Id)"
                    @onclick:stopPropagation="true"
                    @onclick="DrawStats">
                <i class="bi bi-bar-chart me-2" aria-hidden="true"></i>
                <span>Stats</span>
            </button>
        }
        else
        {
            @if (Challenge.End <= CurrentBrowserTime)
            {
                @if (Challenge.Winner is null)
                {
                    <div class="d-flex flex-column my-auto align-items-center">
                        @(new MarkupString(Loc["ChallengeEnded"]))
                    </div>
                    @if (Challenge.CreatedById == AthleteId || IsAdmin)
                    {
                        <button class="btn btn-primary mt-auto"
                                data-bs-toggle="modal"
                                data-bs-target="#drawWinner-@(Challenge.Id)"
                                @onclick:stopPropagation="true"
                                @onclick="LoadTicketBreakdown">
                            <i class="bi bi-stars me-2" aria-hidden="true"></i>
                            <span>@Loc["DrawWinner"]</span>
                        </button>
                    }
                    else
                    {
                        <span class="mb-3 text-center">
                            @string.Format(Loc["AskDraw"], Challenge.CreatedBy == null ? "the creator of the challenge" : Challenge.CreatedBy.Name)
                        </span>
                    }
                }
                else
                {
                    <span class="my-auto text-center">@string.Format(Loc["ChallengeWinner"], @Challenge.Winner.Name)</span>
                }
            }
            else
            {
                <p class="challenge-description">@Challenge.Description</p>

                <div class="challenge-properties d-flex flex-column justify-content-between mb-3">
                    <span>
                        <i class="bi bi-calendar-week me-1" aria-hidden="true"></i>
                        @Challenge.Start.ToString("d") - @Challenge.End.ToString("d")
                    </span>
                    <span>
                        <i class="bi @MeasurementIcon me-1" aria-hidden="true"></i>
                        @Loc[Challenge.Measurement.ToString()]
                    </span>
                    @if (GoalDisplay != null)
                    {
                        <span>
                            <i class="bi bi-flag me-1" aria-hidden="true"></i>
                            @Loc["IndividualGoal"]: @GoalDisplay
                        </span>
                    }
                    <span>
                        <i class="bi bi-people-fill me-1" aria-hidden="true"></i>
                        @Challenge.Athletes?.Count @(Challenge.Athletes?.Count == 1 ? Loc["Participant"] : Loc["Participants"])
                    </span>
                </div>

                <div class="d-flex flex-wrap cg-1 rg-1 mb-4">
                    @if (Challenge.ActivityTypes.Count > 0)
                    {
                        foreach (Strava.ActivityType type in Challenge.ActivityTypes)
                        {
                            <span class="badge bg-primary">@ActivityTypeTranslator.Translate(type)</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-primary">@Loc["AllActivities"]</span>
                    }
                </div>

                @if (HasJoined == false)
                {
                    <button class="btn btn-primary mt-auto" @onclick="JoinChallenge" @onclick:stopPropagation="true">
                        <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>
                        <span>@Loc["Join"]</span>
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary mt-auto" @onclick="LeaveChallenge" @onclick:stopPropagation="true">
                        <i class="bi bi-box-arrow-left me-2" aria-hidden="true"></i>
                        <span>@Loc["Leave"]</span>
                    </button>
                }
            }
        }
    </div>

    <Modal Id="@($"deleteChallenge-{Challenge.Id}")" Size="sm">
        <HeaderContent>
            <span class="text-center">@Loc["DeleteChallenge"]</span>
        </HeaderContent>
        <BodyContent>
            <span class="text-center">@string.Format(Loc["ConfirmDelete"], @Challenge.Title)</span>
        </BodyContent>
        <FooterContent>
            <button class="btn btn-danger mt-1 modal-button" data-bs-dismiss="modal" @onclick="DeleteChallenge">@Loc["DeleteChallenge"]</button>
            <button class="btn btn-secondary mt-1 modal-button" data-bs-dismiss="modal">@Loc["Cancel"]</button>
        </FooterContent>
    </Modal>

    <Modal Id="@($"stats-{Challenge.Id}")" Size="lg">
        <HeaderContent>
            <span class="text-center">@Challenge.Title</span>
        </HeaderContent>
        <BodyContent>
            <canvas id="distribution-@Challenge.Id"></canvas>
        </BodyContent>
        <FooterContent>
            <button class="btn btn-primary mt-1 modal-button" data-bs-dismiss="modal">@Loc["Close"]</button>
        </FooterContent>
    </Modal>

    <Modal Id="@($"drawWinner-{Challenge.Id}")">
        <HeaderContent>
            <span>@Loc["DrawWinner"]</span>
        </HeaderContent>
        <BodyContent>
            @if (DrawingWinner)
            {
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@Loc["Loading"]...</span>
                </div>
                <span class="text-center mt-3">@Loc["Spinning"]...</span>
            }
            else
            {
                @if (Winner is null)
                {
                    <h5 class="mb-3">@string.Format(Loc["DrawWinner_title"], @Challenge.Title)</h5>
                    <span class="text-center">@Loc["DrawWinner_body"]</span>
                    <div class="mt-3 w-100">
                        <h6 class="mb-2">@Loc["TicketsHeading"]</h6>
                        @if (TicketsLoading)
                        {
                            <span class="text-center">@Loc["Loading"]...</span>
                        }
                        else if (TicketBreakdown.Count == 0)
                        {
                            <span class="text-center">@Loc["TicketsNone"]</span>
                        }
                        else
                        {
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>@Loc["TicketsAthlete"]</th>
                                        <th class="text-end">@Loc["TicketsBase"]</th>
                                        <th class="text-end">@Loc["TicketsBonus"]</th>
                                        <th class="text-end">@Loc["TicketsTotal"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (AthleteTickets ticket in TicketBreakdown)
                                    {
                                        <tr>
                                            <td>@ticket.Name</td>
                                            <td class="text-end">@ticket.BaseTickets</td>
                                            <td class="text-end">@ticket.BonusTickets</td>
                                            <td class="text-end">@ticket.TotalTickets</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>@Loc["TicketsTotal"]</th>
                                        <th class="text-end">@TicketBreakdown.Sum(t => t.BaseTickets)</th>
                                        <th class="text-end">@TicketBreakdown.Sum(t => t.BonusTickets)</th>
                                        <th class="text-end">@TotalTickets</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                    </div>
                }
                else
                {
                    <h5 class="mb-3">@string.Format(Loc["TheWinner_title"], @Challenge.Title)</h5>
                    <div class="d-flex flex-row align-items-center column-gap-1 mb-3">
                        <Avatar AthleteId="@Winner.Id" Size="30" />
                        <span>@Winner.Name</span>
                    </div>
                    <span>@Loc["TheWinner_body"]</span>
                }
            }
        </BodyContent>
        <FooterContent>
            @if (!DrawingWinner)
            {
                @if (Winner is null)
                {
                    <div class="d-flex flex-row column-gap-4">
                        <button class="btn btn-primary mt-1 modal-button" @onclick="DrawWinner">@Loc["SpinLottery"]</button>
                        <button class="btn btn-secondary mt-1 modal-button" data-bs-dismiss="modal">@Loc["Cancel"]</button>
                    </div>
                }
                else
                {
                    <button class="btn btn-secondary mt-1 modal-button" data-bs-dismiss="modal">@Loc["Close"]</button>
                }
            }

        </FooterContent>
    </Modal>
    <script src="Components/ChallengeCard.razor.js"></script>
}
